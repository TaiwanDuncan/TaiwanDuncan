    <script>
        let role = "";
        const audio = document.getElementById('bgm');

        function toggleMusic() {
            if (audio.paused) { audio.play(); document.getElementById('m-icon').innerText = 'ğŸ”Š'; }
            else { audio.pause(); document.getElementById('m-icon').innerText = 'ğŸ”‡'; }
        }

        function selectRole(r, btn) {
            role = r;
            document.querySelectorAll('.role-btn').forEach(b => b.classList.remove('active'));
            btn.classList.add('active');
            const start = document.getElementById('startBtn');
            start.disabled = false; 
            start.classList.replace('opacity-20', 'opacity-100');
            start.classList.add('bg-amber-600/40');
        }

        function initGame() {
            document.getElementById('roleSelect').classList.add('hidden');
            document.getElementById('tarotArea').classList.remove('hidden');
            audio.play().catch(()=>{}); 
            document.getElementById('m-icon').innerText = 'ğŸ”Š';
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

